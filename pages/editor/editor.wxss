/* pages/editor/editor.wxss */
/* 引入富文本 */
@import "/wxParse/wxParse.wxss";
page {
  height: auto;  
  background: #fefefe
}
.container {
  box-sizing: border-box;
  height: 100%;
}
.header {
  position: fixed;
  top: 0;
  z-index: 999;
  width: 100%;
  background: #ffffff;
}
.status-bar {
  background: #ffffff;
}
.title-bar {
  width: 92%;
  margin: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.return{
  width: 80rpx;
  height: 80rpx;
  overflow: hidden
}
.back{
  width: 19rpx;
  height: 32rpx;
  display: block;
  margin:30rpx 0 0 6rpx;
}
.title{
  min-width: 132rpx;
  font-size: 30rpx;
  text-align: center;
}
.tablet{
  width: 80rpx;
}
.body{
  width: 100%;
  height: auto;  
}
.main{
  width: 92%;
  height: 100%;
  margin:auto;
}

/* 富文本内容控制 */
.content{
  width: 90%;
  height: auto;
  min-height: 200rpx;
  margin: auto;
  font-size: 28rpx;
  color: #333333;
  padding: 30rpx 0 40rpx;
  box-sizing: border-box;
}
.content image{
  max-width: 100%;
  display: block;
  margin: 10rpx auto;
}
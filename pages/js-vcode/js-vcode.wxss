/* pages/js-vcode/js-vcode.wxss */
page {
  height: auto;  
  background: #fefefe
}
.container {
  box-sizing: border-box;
  height: 100%;
}
.header {
  position: fixed;
  top: 0;
  z-index: 999;
  width: 100%;
  background: #ffffff;
}
.status-bar {
  background: #ffffff;
}
.title-bar {
  width: 92%;
  margin: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.return{
  width: 80rpx;
  height: 80rpx;
  overflow: hidden
}
.back{
  width: 19rpx;
  height: 32rpx;
  display: block;
  margin:30rpx 0 0 6rpx;
}
.title{
  min-width: 132rpx;
  font-size: 30rpx;
  text-align: center;
}
.tablet{
  width: 80rpx;
}
.body{
  width: 100%;
  height: auto;  
}
.main{
  width: 92%;
  height: 100%;
  margin:auto;
}



.vcode{
  width: 400rpx;
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 95rpx;
}
.code{
  width: 200rpx;
  height: 70rpx;
  border-radius: 40rpx;
  border: 1px solid #dddddd;
  padding: 0 30rpx;
  box-sizing: border-box;
  color: #888888;
  font-size: 30rpx;
  line-height: 70rpx;
}
.vcode view{
  width: 180rpx;
  height: 70rpx;
  border-radius: 40rpx;
  border: 1px solid #dddddd;
  color: #888888;
}
canvas{
  width: 100%;
  height: 100%;
}